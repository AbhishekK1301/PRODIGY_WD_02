    }
    .buttons button:hover {
      opacity: 0.8;
    }
    .start { background: #28a745; color: #fff; }
    .pause { background: #ffc107; color: #333; }
    .reset { background: #dc3545; color: #fff; }
    .lap { background: #17a2b8; color: #fff; }
    .laps {
      margin-top: 20px;
      max-height: 150px;
      overflow-y: auto;
